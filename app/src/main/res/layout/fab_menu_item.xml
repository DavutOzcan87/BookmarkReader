<?xml version="1.0" encoding="utf-8"?>
<merge android:id="@+id/fab_all_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/fab_small_height"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/fab_menu_margin"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/fab_item_text"
        android:layout_width="@dimen/fab_text_width"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textColor="@color/fab_label_text_color"
        android:background="@drawable/shape_fab_label"
        android:text="@string/all"/>
    <android.support.v4.widget.Space
        android:layout_width="10dp"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</merge>