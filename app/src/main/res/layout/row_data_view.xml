<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="rowData"
            type="com.codezilla.bookmarkreader.weblist.WebListRowModel">
        </variable>
        <variable
            name="handler"
            type="com.codezilla.bookmarkreader.weblist.WeblistViewHandler">
        </variable>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:background="#FFFFFF"
        android:onClick="@{()->handler.onItemSelected(rowData)}"
        >
        <android.support.constraint.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="10dp"
            android:orientation="vertical" />
        <android.support.constraint.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guidelineHorizontal"
            app:layout_constraintGuide_begin="10dp"
            android:orientation="horizontal" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:imageUrl="@{rowData.faviconUrl}"
            app:civ_border_width="3px"
            app:civ_border_color="@color/colorImageBorder"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/thumbnail"
            app:layout_constraintTop_toTopOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@{rowData.title}"
            android:textColor="@color/colorListTitle"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:text="@{rowData.description == null ?  @string/not_evaluated:rowData.description}"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintRight_toRightOf="@id/title"
            android:layout_marginBottom="10dp"
            android:maxLines="10"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{rowData.changeDate}"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/thumbnail"
            app:layout_constraintRight_toRightOf="@id/thumbnail"
            app:layout_constraintBottom_toTopOf="@id/delimeter"
            />
        <View
            android:id="@+id/delimeter"
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/list_delimeter"
            />
    </android.support.constraint.ConstraintLayout>
</layout>